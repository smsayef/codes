<Window x:Class="wpf.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf"
        mc:Ignorable="d"
       Height="410" Width="300" FontSize="14" Background="Beige" WindowStartupLocation="CenterScreen" >
    <Border Background="DimGray" CornerRadius="10" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="Username" Background="DimGray" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="Password" Background="DimGray" Foreground="White" FontSize="18"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click"  Content="Submit" Margin="60 10" Background="Beige" Foreground="Gray" FontSize="18"/>

        </StackPanel>
    </Border>
</Window>

